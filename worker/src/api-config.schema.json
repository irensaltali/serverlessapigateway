{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://serverlessapigateway.com/api-config.schema.json",
    "title": "API Gateway Config",
    "description": "Configuration for the Serverless API Gateway",
    "type": "object",
    "properties": {
        "servers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "alias": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "idn-hostname"
                    }
                },
                "required": [
                    "alias",
                    "url"
                ]
            }
        },
        "services": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "alias": {
                        "type": "string"
                    },
                    "entrypoint": {
                        "type": "string"
                    }
                },
                "required": [
                    "alias",
                    "entrypoint"
                ]
            }
        },
        "cors": {
            "type": "object",
            "properties": {
                "allow_origins": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "anyOf": [
                            {
                                "type": "string",
                                "format": "idn-hostname"
                            },
                            {
                                "const": "*"
                            }
                        ]
                    }
                },
                "allow_methods": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "enum": [
                            "GET",
                            "POST",
                            "PUT",
                            "DELETE",
                            "OPTIONS",
                            "PATCH",
                            "*"
                        ]
                    }
                },
                "allow_headers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "expose_headers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "allow_credentials": {
                    "type": "boolean"
                },
                "max_age": {
                    "type": "integer"
                }
            },
            "required": [
                "allow_origins",
                "allow_methods",
                "allow_headers",
                "expose_headers",
                "allow_credentials",
                "max_age"
            ]
        },
        "authorizer": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "const": "jwt"
                        },
                        "secret": {
                            "type": "string"
                        },
                        "algorithm": {
                            "const": "HS256"
                        },
                        "audience": {
                            "type": "string"
                        },
                        "issuer": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "secret",
                        "algorithm",
                        "audience",
                        "issuer"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "type": {
                            "const": "auth0"
                        },
                        "domain": {
                            "type": "string"
                        },
                        "client_id": {
                            "type": "string"
                        },
                        "client_secret": {
                            "type": "string"
                        },
                        "secret": {
                            "type": "string"
                        },
                        "redirect_uri": {
                            "type": "string"
                        },
                        "jwks": {
                            "type": "string"
                        },
                        "jwks_uri": {
                            "type": "string"
                        },
                        "scope": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type",
                        "domain",
                        "client_id",
                        "client_secret",
                        "secret",
                        "redirect_uri",
                        "scope"
                    ],
                    "anyOf": [
                        {
                            "required": ["jwks"]
                        },
                        {
                            "required": ["jwks_uri"]
                        }
                    ]
                }
            ]
        }
    },
    "paths": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
                "method": {
                    "enum": [
                        "GET",
                        "POST",
                        "PUT",
                        "DELETE",
                        "OPTIONS",
                        "PATCH",
                        "ANY"
                    ]
                },
                "path": {
                    "type": "string",
                    "format": "pathStart"
                },
                "integration": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "enum": [
                                "http",
                                "http_proxy",
                                "service",
                                "auth0_callback",
                                "auth0_userinfo",
                                "auth0_callback_redirect"
                            ]
                        },
                        "server": {
                            "type": "string",
                            "$ref": "#/properties/servers/items/properties/alias"
                        },
                        "service": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "type"
                    ]
                },
                "auth": {
                    "type": [
                        "boolean",
                        "null"
                    ]
                },
                "mapping": {
                    "type": "object",
                    "properties": {
                        "headers": {
                            "type": "object"
                        },
                        "query": {
                            "type": "object"
                        }
                    }
                },
                "variables": {
                    "type": "object"
                },
                "response": {
                    "type": [
                        "object",
                        "string"
                    ],
                    "properties": {
                        "status": {
                            "type": "string"
                        }
                    }
                }
            },
            "required": [
                "method",
                "path"
            ]
        }
    },
    "variables": {
        "type": "object"
    },
    "newProperty1": {
        "type": "string",
        "description": "Description for newProperty1"
    },
    "newProperty2": {
        "type": "integer",
        "description": "Description for newProperty2"
    }
},
"required": [
    "paths",
    "newProperty1",
    "newProperty2"
]
}
